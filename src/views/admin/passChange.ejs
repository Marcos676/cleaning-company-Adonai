<!DOCTYPE html>
<html lang="es">
  <%- include("../partials/head") %>
  <body>
    <%- include("./partials/header") %>

    <div class="login container-fluid max-width margin-admin-top py-4">
      <!-- Titulo -->
      <h3 class="text-center fw-bold mb-4">CAMBIAR CONTRASEÑA</h3>
      
      <form action="/admin/cambiar-contrasenia?_method=PUT" class="form-login form-pass form-group pt-3 text-center fw-bold" method="POST">
        <!-- pass -->
          <label class="d-block text-start fs-5" for="pass">Contraseña actual</label>
        <input class="form-control" type="password" name="pass" id="pass">
        <p class="errorPass font-red fw-normal d-block text-start my-1 errorPass"> 
          <%= (typeof errores !='undefined' && errores.pass) ? errores.pass.msg : null %>
        </p>
        <!-- new pass -->
        <label class="d-block text-start  fs-5" for="newPass">Nueva contraseña</label>
        <input class="form-control" type="password" name="newPass" id="newPass">
        <p class="errorNewPass font-red fw-normal d-block text-start my-1">
          <%= (typeof errores !='undefined' && errores.newPass) ? errores.newPass.msg : null %>
        </p>
        <!-- repeat new pass -->
        <label class="d-block text-start  fs-5" for="repeatPass">Repetir nueva contraseña</label>
        <input class="form-control" type="password" name="repeatPass" id="repeatPass">
        <p class="errorRepeatPass font-red fw-normal d-block text-start my-1">
          <%= (typeof errores !='undefined' && errores.repeatPass) ? errores.repeatPass.msg : null %>
        </p>
        
        <button class="btn btn-primary btn-blue fw-bold mt-4" type="submit">Cambiar</button>
      </form>
    </div>

    <%- include("./partials/footer") %>
    <script src="/javascripts/ChangePassValidator.js"></script>
    <!-- sweet alert -->
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

  </body>
</html>
